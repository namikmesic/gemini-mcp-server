{
  "name": "gemini-mcp-server",
  "version": "1.0.0",
  "description": "MCP server that acts as a local agent to connect with the Gemini API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "dev": "ts-node-esm src/index.ts",
    "dev:http": "ts-node-esm src/http-server.ts",
    "test": "node dist/test-client.js"
  },
  "dependencies": {
    "@google/genai": "^0.14.0",
    "@modelcontextprotocol/sdk": "^1.11.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3"
  }
}
